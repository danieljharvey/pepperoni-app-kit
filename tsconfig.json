{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "artifacts",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "types":[]
    },
    "filesGlob": [
        "node_modules/@types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "types": [
        "react",
        "react-native",
        "jest"
    ],
    "exclude": [
        "android",
        "ios",
        "build",
        "typings",
        "env.example.js",
        "env.js",
        "plopfile.js",
        "test"
    ],
    "compileOnSave": false
}
