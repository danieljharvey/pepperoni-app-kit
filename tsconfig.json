{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "artifacts",
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": true,
        "types": ["react"],
        "lib":[
            "es5",
            "es2015",
            "es2016",
            "es2017"
        ],
        "paths": {
            "src/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "filesGlob": [
        "node_modules/@types/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "types": [
        "react",
        "react-native",
        "jest",
        "enzyme"
    ],
    "exclude": [
        "android",
        "ios",
        "node_modules",
        "build",
        "typings",
        "env.example.js",
        "env.js",
        "plopfile.js",
    ],
    "compileOnSave": false
}
